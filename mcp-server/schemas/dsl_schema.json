{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deepline Workflow DSL Schema",
  "description": "Schema for validating Deepline workflow definitions",
  "type": "object",
  "required": ["workflow", "tasks"],
  "properties": {
    "workflow": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "description": {
          "type": "string",
          "maxLength": 500
        },
        "client_id": {
          "type": "string",
          "maxLength": 100
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 5
        },
        "sla_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1440,
          "default": 60
        }
      },
      "additionalProperties": false
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "agent", "action"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "id": {
            "type": "string",
            "maxLength": 50
          },
          "agent": {
            "type": "string",
            "enum": ["eda", "fe", "model", "custom"]
          },
          "action": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "params": {
            "type": "object",
            "default": {}
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
} 